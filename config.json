{
    "build": {
        "src":  {
            "css":   {
                "app":  [
                    "./bower_components/bootstrap/dist/css/bootstrap.min.css",
                    "./bower_components/font-awesome/css/font-awesome.min.css",
                    "./assets/styles/app.less"
                ],
                "auth": [
                    "./bower_components/bootstrap/dist/css/bootstrap.min.css",
                    "./bower_components/font-awesome/css/font-awesome.min.css",
                    "./assets/styles/auth.less"
                ]
            },
            "js":    {
                "app":                 [
                    "./bower_components/jquery/dist/jquery.min.js",
                    "./bower_components/bootstrap/dist/js/bootstrap.min.js",
                    "./assets/scripts/app.js"
                ],
                "list_delete_popover": [
                    "./assets/scripts/list-delete-popover.js"
                ],
                "clients_client_form": [
                    "./bower_components/jquery.inputmask/dist/jquery.inputmask.bundle.min.js",
                    "./assets/scripts/clients-client-form.js"
                ],
                "finance_transaction_form": [
                    "./bower_components/jquery.inputmask/dist/jquery.inputmask.bundle.min.js",
                    "./assets/scripts/finance-transaction-form.js"
                ],
                "warehouse_good_form": [
                    "./bower_components/jquery.inputmask/dist/jquery.inputmask.bundle.min.js",
                    "./assets/scripts/warehouse-good-form.js"
                ]
            },
            "img":   [
                "assets/images/**/*.png",
                "assets/images/**/*.jpg",
                "assets/images/**/*.gif"
            ],
            "fonts": [
                "assets/fonts/*"
            ]
        },
        "dest": {
            "css":   "web/css",
            "js":    "web/js",
            "img":   "web/img",
            "fonts": "web/fonts"
        }
    }
}